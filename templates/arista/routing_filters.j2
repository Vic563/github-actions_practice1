!
! Routing Filters - Route Maps and Prefix Lists
!
{%- if prefix_lists %}
! Prefix Lists
{%- for prefix_list in prefix_lists %}
ip prefix-list {{ prefix_list.name }}
{%- for entry in prefix_list.entries %}
   seq {{ entry.seq }} {{ entry.action }} {{ entry.prefix }}{% if entry.ge %} ge {{ entry.ge }}{% endif %}{% if entry.le %} le {{ entry.le }}{% endif %}
{%- endfor %}
{%- endfor %}
{%- endif %}

{%- if route_maps %}
! Route Maps
{%- for route_map in route_maps %}
route-map {{ route_map.name }} {{ route_map.action }} {{ route_map.seq }}
{%- if route_map.match %}
{%- for match in route_map.match %}
   match {{ match.type }} {{ match.value }}
{%- endfor %}
{%- endif %}
{%- if route_map.set %}
{%- for set in route_map.set %}
   set {{ set.type }} {{ set.value }}
{%- endfor %}
{%- endif %}
{%- endfor %}
{%- endif %}
!
